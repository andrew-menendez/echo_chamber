{
  "name": "TrumpSpeak",
  "version":"1.0",
  "manifest_version":2,
  "description": "Read what you believe!",
  "permissions": ["storage","activeTab","tabs","http://*/","https://*/"],
  "browser_action": {
    "default_icon": "icons/trump-clear-ts-48.png",
    "default_title": "start TrumpSpeak!"
  },
  "icons":{
    "16":"/icons/trump-clear-16.png",
    "48":"icons/trump-clear-ts-48.png",
    "128":"/icons/TrumpSpeak-small.jpg"
  },
  "background": {
    //"page":"background.html",
    "scripts": ["background.js","scripts/find.js"],
    "persistent": false
    },

  "options_ui": {
    // Required.
    "page": "/options/options.html",
    // Recommended.
    "chrome_style": true
  }
}